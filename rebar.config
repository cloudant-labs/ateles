{erl_opts, [debug_info]}.

{deps, [
    {config, ".*", {git, "https://github.com/apache/couchdb-config", {branch, "master"}}},
    {jiffy, ".*", {git, "https://github.com/davisp/jiffy", {branch, "master"}}},
    {gpb, ".*", {git, "https://github.com/tomas-abrahamsson/gpb", {branch, "master"}}}
]}.

{proto_opts, [
    {compiler, gpb},
    {src_dirs, ["proto"]}
]}.

{gpb_opts, [
    maps,
    strings_as_binaries,
    {module_name_suffix, "_pb"}
]}.

{eunit_opts, [
    verbose
]}.

{pre_hooks, [{"", compile, "make server"}]}.
