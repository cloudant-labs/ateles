{erl_opts, [debug_info]}.

{deps, [
    {config, ".*", {git, "https://github.com/apache/couchdb-config", {branch, "master"}}},
    {jiffy, ".*", {git, "https://github.com/davisp/jiffy", {branch, "master"}}},
    {grpcbox, ".*", {git, "https://github.com/cloudant-labs/grpcbox", {branch, "chatterbox-fix"}}}
]}.

{plugins, [grpcbox_plugin]}.

{grpc, [
    {protos, "proto"},
    {type, "client"},
    {gpb_opts, [
        {module_name_suffix, "_pb"}
    ]}
]}.

{eunit_opts, [
    verbose
]}.

{pre_hooks, [{"", compile, "make generate server"}]}.
